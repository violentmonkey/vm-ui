{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "jsxFactory": "VM.h",
    "jsxFragmentFactory": "VM.Fragment"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
