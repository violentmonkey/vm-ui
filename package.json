{
  "name": "@violentmonkey/ui",
  "version": "0.4.0",
  "description": "Common UI for userscripts in Violentmonkey",
  "author": "Gerald <gera2ld@163.com>",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "scripts": {
    "dev": "rollup -wc rollup.conf.js",
    "prebuild": "npm run ci && npm run clean",
    "ci": "npm run lint",
    "build": "tsc && npm run build:js",
    "lint": "eslint --ext .ts,.tsx .",
    "prepublishOnly": "npm run build",
    "clean": "del dist types",
    "build:js": "rollup -c rollup.conf.js"
  },
  "repository": "git@github.com:violentmonkey/vm-ui.git",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "unpkg": "dist/index.min.js",
  "jsdelivr": "dist/index.min.js",
  "typings": "types/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "types"
  ],
  "devDependencies": {
    "@gera2ld/plaid": "~2.0.0",
    "@gera2ld/plaid-common-react": "~2.0.0",
    "@gera2ld/plaid-common-ts": "~2.1.2",
    "@gera2ld/plaid-rollup": "~2.1.1",
    "del-cli": "^3.0.1",
    "husky": "^4.2.5"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.0",
    "@gera2ld/jsx-dom": "^1.2.0"
  }
}
