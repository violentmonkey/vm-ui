    "@gera2ld/plaid": "~1.4.0",
    "@gera2ld/plaid-react": "~1.4.0",
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "del-cli": "^1.1.0",
    "eslint": "^5.16.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "husky": "^2.3.0",
    "postcss": "^7.0.16",
    "postcss-modules": "^1.4.1",
    "rollup": "^1.12.0",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
